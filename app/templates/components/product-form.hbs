<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input class="form-control" value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea class="form-control" value=description id="description"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    {{input-money prefix="$" class="form-control" value=price id="price"}}
  </div>
  <div class="form-group">
    <label for="brand">Brand</label>
    {{input class="form-control" value=brand id="brand"}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input class="form-control" value=image id="image"}}
  </div>

  <button {{action 'saveProduct' product}}>Save Product</button>
</form>
